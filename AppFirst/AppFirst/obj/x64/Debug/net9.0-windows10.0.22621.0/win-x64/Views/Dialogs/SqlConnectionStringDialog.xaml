<ContentDialog
    x:Class="AppFirst.Views.Dialogs.SqlConnectionStringDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AppFirst.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Sql connectionstring dialog"
    Width="800"
    Height="600"
    CloseButtonText="Cancel"
    PrimaryButtonText="OK"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid
                Height="Auto"
                Margin="10,10,10,10"
                ColumnDefinitions="Auto,*"
                RowDefinitions="10,Auto,Auto,Auto,Auto,Auto,Auto,Auto,1">
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Height="20"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Left"
                        Text="Server :" />
                    <ComboBox x:ConnectionId='8'
                        x:Name="cmbServer"
                        Width="400"
                        Height="40"
                        Margin="5,10,5,10"
                        IsEditable="True"
                        ItemsSource="{Binding ServerNames, Mode=TwoWay}"
                        SelectedItem="{Binding SelectedServerName, Mode=TwoWay}" />
                    <Button
                        Grid.Column="0"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Center"
                        Command="{Binding UpdateServernameCommand}"
                        ToolTipService.ToolTip="Update connection string">
                        <Image
                            Width="30"
                            Height="30"
                            Source="/Assets/arrow-down-left-box-outline.png" />
                    </Button>
                </StackPanel>
                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Height="20"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Left"
                        Text="Database :" />
                    <TextBox x:ConnectionId='7'
                        x:Name="txtDatabase"
                        Width="400"
                        Height="40"
                        Margin="5,10,5,10"
                        Text="{Binding DatabaseName, Mode=TwoWay}" />
                    <Button
                        Grid.Column="0"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Center"
                        Command="{Binding UpdateDatabaseNameCommand}"
                        ToolTipService.ToolTip="Update connection string">
                        <Image
                            Width="30"
                            Height="30"
                            Source="/Assets/arrow-down-left-box-outline.png" />
                    </Button>
                </StackPanel>
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">

                    <TextBlock
                        Width="120"
                        Height="20"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Left"
                        Text="Username :" />
                    <TextBox x:ConnectionId='6'
                        x:Name="txtUsername"
                        Width="400"
                        Height="40"
                        Margin="5,10,5,10"
                        Text="{Binding Username, Mode=TwoWay}" />
                    <Button
                        Grid.Column="0"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Center"
                        Command="{Binding UpdateUsernameCommand}"
                        ToolTipService.ToolTip="Update connection string">
                        <Image
                            Width="30"
                            Height="30"
                            Source="/Assets/arrow-down-left-box-outline.png" />
                    </Button>
                </StackPanel>
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Height="20"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Left"
                        Text="Password :" />
                    <PasswordBox x:ConnectionId='5'
                        x:Name="pwdPassword"
                        Width="400"
                        Height="40"
                        Margin="5,10,5,10"
                        Password="{Binding Password, Mode=TwoWay}" />
                    <Button
                        Grid.Column="0"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Center"
                        Command="{Binding UpdatePasswordCommand}"
                        ToolTipService.ToolTip="Update connection string">
                        <Image
                            Width="30"
                            Height="30"
                            Source="/Assets/arrow-down-left-box-outline.png" />
                    </Button>
                </StackPanel>
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Height="23"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Left"
                        Text="IntegratedSecurity :" />
                    <CheckBox x:ConnectionId='4'
                        x:Name="chkIntegratedSecurity"
                        Width="400"
                        Height="40"
                        Margin="5,10,5,10"
                        IsChecked="{Binding IntegratedSecurity, Mode=TwoWay}" />
                    <Button
                        Grid.Column="0"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Center"
                        Command="{Binding UpdateIntegratedSecurityCommand}"
                        ToolTipService.ToolTip="Update connection string">
                        <Image
                            Width="30"
                            Height="30"
                            Source="/Assets/arrow-down-left-box-outline.png" />
                    </Button>
                </StackPanel>
                <StackPanel
                    Grid.Row="6"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Height="23"
                        Margin="10,0,10,0"
                        HorizontalAlignment="Left"
                        Text="AttachDBFilename :" />
                    <TextBox x:ConnectionId='3'
                        x:Name="txtAttachDBFilename"
                        Width="400"
                        Height="40"
                        Margin="5,10,5,10"
                        Text="{Binding AttachDBFilename, Mode=TwoWay}" />
                    <Button
                        Grid.Column="0"
                        Margin="10,10,10,10"
                        HorizontalAlignment="Center"
                        Command="{Binding UpdateAttachDBFilenameCommand}"
                        ToolTipService.ToolTip="Update connection string">
                        <Image
                            Width="30"
                            Height="30"
                            Source="/Assets/arrow-down-left-box-outline.png" />
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid
                Margin="10,10,10,10"
                ColumnDefinitions="*"
                RowDefinitions="*">
                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                    <TextBlock
                        Height="23"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        Text="Sql connection string:" />
                    <TextBox x:ConnectionId='2'
                        x:Name="txtSqlConnectionString"
                        Height="40"
                        Margin="5,10,5,10"
                        VerticalAlignment="Center"
                        Text="{Binding SqlConnectionString, Mode=TwoWay}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</ContentDialog>

