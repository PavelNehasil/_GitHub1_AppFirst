<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AppFirst.Views.Pages.LoadSqlDataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
    xmlns:local="using:AppFirst"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wuc="using:WinUICommunity"
    mc:Ignorable="d">

    <Grid>
        <Grid ColumnDefinitions="*" RowDefinitions="Auto,*">
            <StackPanel
                Grid.Row="0"
                Margin="0,20,0,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="10,5,5,5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding ShowSqlConnectionStringDialogCommand, Mode=OneWay}"
                    Content="ConnectionString" />
                <TextBox
                    Height="NaN"
                    Margin="5,5,0,5"
                    VerticalAlignment="Center"
                    AcceptsReturn="False"
                    IsEnabled="True"
                    Text="{Binding ConnectionString}" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <ListView
                        x:Name="OrdersListView"
                        BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                        BorderThickness="1"
                        ItemsSource="{x:Bind ViewModel.TableOrders, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Margin="5"
                                    Padding="7"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding OrderID}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding CustomerID}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding EmployeeID}" />
                                    <TextBlock
                                        Width="150"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding OrderDate}" />
                                    <TextBlock
                                        Width="150"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding RequiredDate}" />
                                    <TextBlock
                                        Width="150"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding ShippedDate}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding ShipVia}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding Freight}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding ShipName}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding ShipAddress}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding ShipCity}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding ShipRegion}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding ShipPostalCode}" />
                                    <TextBlock
                                        Width="100"
                                        Margin="5,0,0,0"
                                        Style="{ThemeResource BaseTextBlockStyle}"
                                        Text="{Binding ShipCountry}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}">
                <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
                <TextBlock x:Uid="Sql_Loading" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{x:Bind ViewModel.HasFailures, Mode=OneWay}">
                <TextBlock
                    x:Uid="Sql_FailedMessage"
                    HorizontalAlignment="Center"
                    TextWrapping="WrapWholeWords" />
                <HyperlinkButton
                    x:Uid="Sql_Reload"
                    HorizontalAlignment="Center"
                    Command="{x:Bind ViewModel.ReloadCommand}" />
            </StackPanel>

        </Grid>

    </Grid>
</Page>

