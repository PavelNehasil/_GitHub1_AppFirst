<?xml version="1.0" encoding="utf-8"?>
<ex:WindowEx
    x:Class="AppFirst.Views.Dialogs.ProgressDialogEx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ex="using:WinUIEx"
    xmlns:local="using:AppFirst.Views.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400" Height="300"
    MinWidth="300" MinHeight="200"
    MaxWidth="500" MaxHeight="400"
    PersistenceId="LogWindow"
    Title="Progress dialog"
    mc:Ignorable="d"
    IsResizable="False"
    IsAlwaysOnTop="True"
    IsTitleBarVisible="False">

    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <Grid>
        <Grid
            Margin="10,10,10,10"
            ColumnDefinitions="*"
            RowDefinitions="20,*,70">
            <StackPanel
                Grid.Row="1"
                Orientation="Vertical">
                <TextBlock x:Name="InputLabel" FontSize="18" Text="Progress:"/>

                <ProgressBar
                    Name="pbStatus"
                    Width="350"
                    Height="40"
                    Margin="10"
                    HorizontalAlignment="Center"
                    IsIndeterminate="true"/>
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,5,0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Name="btnCancel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="OnClose"
                    IsEnabled="true"
                    ToolTipService.ToolTip="Cancel">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Accept"/>
                        <TextBlock Text="Cancel" Margin="5,0,0,0"/>
                    </StackPanel>

                </Button>

            </StackPanel>
        </Grid>
    </Grid>
</ex:WindowEx>
