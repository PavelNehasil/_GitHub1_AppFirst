<ContentDialog
    x:Class="AppFirst.Views.Dialogs.ContentDialogDeleteImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Delete image?"
    CloseButtonText="Cancel"
    DefaultButton="Close"
    PrimaryButtonClick="DeleteButtonClick"
    PrimaryButtonText="Delete">

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!--  Content body  -->
        <TextBlock
            x:Name="TextContentTBl"
            Margin="10,10,10,10"
            TextWrapping="Wrap" />
        <Image
            x:Name="DeletedImageImg"
            Width="200"
            Height="200"
            Margin="10,10,10,10" />
    </StackPanel>

</ContentDialog>
