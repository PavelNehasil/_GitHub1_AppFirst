<?xml version="1.0" encoding="utf-8" ?>
<ex:WindowEx
    x:Class="AppFirst.Views.Dialogs.ImageDialogEx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="using:WinUIEx"
    xmlns:local="using:AppFirst.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Image dialog"
    Width="1000"
    Height="900"
    IsAlwaysOnTop="True"
    IsResizable="False"
    IsTitleBarVisible="True"
    IsMinimizable="False"
    
    PersistenceId="LogWindow"
    mc:Ignorable="d">

    <Grid
        Margin="10,10,10,10"
        ColumnDefinitions="*"
        RowDefinitions="10,*,70"
        HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ScrollView
                x:Name="ImageScrollView"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                ContentOrientation="None"
                HorizontalScrollBarVisibility="Auto"
                HorizontalScrollMode="Auto"
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto">
                <Image
                    x:Name="ImageImage"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Stretch="Uniform" />
            </ScrollView>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="0,5,0,5"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            
            Orientation="Horizontal"
            BorderThickness="1"
            CornerRadius="5"
            Spacing="8"
            Padding="8"
            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
            <Button
                Name="btnCancel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Click="OnClose"
                IsEnabled="true"
                ToolTipService.ToolTip="Close">
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE8BB;" />
                    <TextBlock Margin="5,0,0,0" Text="Close" />
                </StackPanel>

            </Button>

        </StackPanel>
    </Grid>
    <!--  Content body  -->

</ex:WindowEx>
